<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder package-path="com.arthurchan35.wcse">

	<author>Arthur Chan</author>

	<namespace>UrlStorage</namespace>

	<entity name="Page" local-service="true">
		<column name="url_id" type="long" primary="true" entity="Word" mapping-table="Page_Word"></column>
		<column name="url" type="String"></column>
		<column name="description" type="String"></column>
		<column name="image" type="String"></column>

		<finder name="URL" return-type="Page" unique="true">
			<finder-column name="url" />
		</finder>
	</entity>

	<entity name="Word" local-service="true">
		<column name="word_id" type="long" primary="true"></column>
		<column name="url_id" type="long" entity="Page" mapping-table="Page_Word"></column>
		<column name="word" type="String"></column>
	</entity>

</service-builder>